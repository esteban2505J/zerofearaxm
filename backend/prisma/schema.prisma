// 1. Configuración del generador (Crea el código TypeScript para tu Back)
generator client {
  provider = "prisma-client-js"
}

// 2. Conexión a la base de datos (Lee la URL de tu archivo .env)
datasource db {
  provider = "postgresql"
}

// 3. Tu modelo de datos de Camisetas
model Product {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  price       Float
  stock       Int      @default(0)
  imageUrl    String?
  category    String   @default("camisetas")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}