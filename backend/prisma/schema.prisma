// 1. Configuración del generador (Crea el código TypeScript para tu Back)
generator client {
  provider = "prisma-client-js"
}

// 2. Conexión a la base de datos (Lee la URL de tu archivo .env)
datasource db {
  provider = "postgresql"
}

model Product {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  price       Float
  stock       Int      @default(0)
  imageUrl    String?
  
  // Relación con Categoría
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Category {
  id        String    @id @default(uuid())
  name      String    @unique
  products  Product[] // Una categoría tiene muchos productos
  createdAt DateTime  @default(now())
}